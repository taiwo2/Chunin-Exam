<%= form_with model: [:app, WebLink.new], data: {
  remote: true, controller: "form-error", action: "ajax:error->form-error#onError"
} do |form| %>
  <div class="form-group mt-0">
    <div class="form-group-header">
      <%= form.label :original_url, "Website URL" %>
    </div>
    <div class="form-group-body">
      <%= form.url_field :original_url, class: "form-control width-full" %>
      <%= render "shared/form_error", error_field: "original_url" %>
    </div>
  </div>
  <%= form.submit "Shorten it", class: "btn btn-primary btn-block" %>
<% end %>
