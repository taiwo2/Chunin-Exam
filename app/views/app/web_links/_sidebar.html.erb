<aside data-sidebar-target="aside" class="col-3 border-right sidebar">
  <div class="py-2 px-4 border-bottom d-flex flex-items-center flex-justify-between">
    <span><%= pluralize(current_user.web_links_count, "Link") %></span>
    <div class="d-flex flex-items-center">
      <span>Clicks all time</span>
      <button type="button" data-action="sidebar#hide" class="close-button ml-1 d-lg-none"><%= octicon "x", height: 20 %></button>
    </div>
  </div>
  <nav class="sidebar-nav">
    <% current_user.web_links.each do |web_link| %>
      <%= link_to app_web_link_path(web_link), class: "sidebar-item d-block py-3 px-4 no-underline css-truncate css-truncate-overflow" do %>
        <span class="f4 color-text-primary css-truncate css-truncate-overflow"><%= web_link.title %></span>
        <div class="mt-1 d-flex flex-items-center flex-justify-between">
          <span class="css-truncate css-truncate-overflow"><%= external_web_link_url(id: web_link.uid) %></span>
          <span class="color-text-tertiary ml-2">6 clicks</span>
        </div>
      <% end %>
    <% end %>
  </nav>
</aside>
