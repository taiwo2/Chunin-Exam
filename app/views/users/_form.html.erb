<%= form_with model: @user, class: "Box max-w-sm Box-body width-full mx-auto my-4" do |form| %>
  <div class="form-group mt-0">
    <div class="form-group-header">
      <%= form.label :email_address %>
    </div>
    <div class="form-group-body">
      <%= form.email_field :email_address, class: "form-control width-full" %>
    </div>
  </div>
  <div class="form-group mt-0">
    <div class="form-group-header">
      <%= form.label :password, "Password (min. 6 characters)" %>
    </div>
    <div class="form-group-body">
      <%= form.password_field :email_address, class: "form-control width-full" %>
    </div>
  </div>
  <%= form.submit "Create account", class: "btn btn-primary btn-block" %>
<% end %>
