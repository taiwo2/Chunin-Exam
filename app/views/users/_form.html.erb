<%= form_with model: @user, class: "Box max-w-sm Box-body width-full mx-auto my-4", data: {
  remote: true, controller: "form-error", action: "ajax:error->form-error#onError"
} do |form| %>
  <div class="form-group mt-0">
    <div class="form-group-header">
      <%= form.label :email_address %>
    </div>
    <div class="form-group-body">
      <%= form.email_field :email_address, class: "form-control width-full" %>
      <%= render "shared/form_error", error_field: "email_address" %>
    </div>
  </div>
  <div class="form-group mt-0">
    <div class="form-group-header">
      <%= form.label :password, "Password (min. 6 characters)" %>
    </div>
    <div class="form-group-body">
      <%= form.password_field :password, class: "form-control width-full" %>
      <%= render "shared/form_error", error_field: "password" %>
    </div>
  </div>
  <%= form.submit "Create account", class: "btn btn-primary btn-block" %>
<% end %>
